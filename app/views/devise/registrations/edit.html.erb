<div class="col-md-6 buffer-top">
  <h2><%= t('.edit') %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'shared/errors', resource: resource %>
    <div class='mb-3'>
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :password %> <i>(<%= t('labels_form.leave_blank') %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> <%= t('labels_form.min_characters') %></em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password %> <i>(<%= t('labels_form.current_password') %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.submit t('buttons.update'), class: "btn btn-primary" %>
      <%= link_to t('.back'), :back, class: 'btn btn-outline-secondary' %>
    </div>
  <% end %>
  <div class="mt-4">
    <p><%= t('unhappy') %> <%= button_to t('buttons.cancel_my_account'), registration_path(resource_name), data: { confirm: t('confirm.are_you_sure') }, method: :delete, class: "btn btn-danger" %></p>
    
    <%= link_to t('buttons.back'), :back, class: "text-decoration-none" %>
  </div>
</div>