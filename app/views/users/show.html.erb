<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: 'round-avatar' %>

  <% if @user == current_user %>
    <p class="mt-3 buffer-top"><%= link_to t('buttons.edit_profile'),
      edit_user_path(@user), class: 'btn btn-outline-secondary' %></p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('profile_events.organized') %></h3>
        <div class="row justify-content-center">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('profile_events.has_not_organized') %></p>
      <% end %>
    </div>
  </div>
</div>
